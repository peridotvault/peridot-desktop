{
  "name": "peridotvault-desktop",
  "description": "Intelligent Decentralized Gaming",
  "keywords": [
    "game",
    "decentralized",
    "web3",
    "blockchain",
    "artificial",
    "intelligent"
  ],
  "version": "0.0.4",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "rimraf release dist dist-electron && tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "build-win": "electron-builder --win nsis --x64"
  },
  "repository": "https://github.com/peridotvault/peridotvault-macos",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "author": "Antigane",
  "contributors": [
    {
      "name": "Ranaufal Muha",
      "email": "ifal.muha@gmail.com",
      "url": "https://github.com/ranaufalmuha"
    }
  ],
  "dependencies": {
    "@antigane/encryption": "^0.1.4",
    "@aws-sdk/client-s3": "^3.850.0",
    "@babel/plugin-transform-react-jsx": "^7.25.9",
    "@dfinity/agent": "^2.1.3",
    "@dfinity/candid": "^2.1.3",
    "@dfinity/identity-secp256k1": "^2.1.3",
    "@dfinity/ledger-icp": "^2.6.4",
    "@dfinity/principal": "^2.1.3",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fortawesome/fontawesome-svg-core": "^6.7.1",
    "@fortawesome/free-solid-svg-icons": "^6.7.1",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@mui/material": "^7.3.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "axios": "^1.9.0",
    "bip32": "^5.0.0-rc.0",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "decision-tree": "^0.3.7",
    "dexie": "^4.0.11",
    "dexie-react-hooks": "^1.1.7",
    "electron-log": "^5.4.3",
    "electron-store": "^10.0.0",
    "extract-zip": "^2.0.1",
    "framer-motion": "^11.13.1",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "luxon": "^3.6.1",
    "motion": "^12.23.12",
    "multer": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.0.1",
    "react-select": "^5.10.1",
    "stream-browserify": "^3.0.0",
    "tiny-secp256k1": "^2.2.3",
    "vite-plugin-wasm": "^3.3.0"
  },
  "devDependencies": {
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/vite": "^4.1.14",
    "@types/express": "^5.0.3",
    "@types/lodash": "^4.17.16",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.6.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.14",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.peridotvault.desktop",
    "productName": "PeridotVault",
    "asar": true,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "type": "distribution",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.utilities",
      "notarize": false
    },
    "dmg": {
      "icon": "build/icons/icon.icns",
      "iconSize": 80,
      "window": {
        "width": 544,
        "height": 408
      },
      "contents": [
        {
          "x": 145,
          "y": 257,
          "type": "file"
        },
        {
          "x": 400,
          "y": 255,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/assets/coin-peridot.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
