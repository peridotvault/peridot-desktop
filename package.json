{
  "name": "peridotvault-desktop",
  "description": "Intelligent Decentralized Gaming",
  "keywords": [
    "game",
    "decentralized",
    "web3",
    "blockchain",
    "artificial",
    "intelligent"
  ],
  "version": "0.0.5",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "rimraf release dist dist-electron && tsc && vite build && electron-builder",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "prebuild-win": "rimraf release dist dist-electron && tsc && vite build",
    "build-win": "electron-builder --win nsis --x64"
  },
  "repository": "https://github.com/peridotvault/peridot-desktop",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "author": "Antigane",
  "contributors": [
    {
      "name": "Ranaufal Muha",
      "email": "ifal.muha@gmail.com",
      "url": "https://github.com/ranaufalmuha"
    }
  ],
  "dependencies": {
    "@antigane/encryption": "^0.1.5",
    "@aws-sdk/client-s3": "^3.934.0",
    "@babel/plugin-transform-react-jsx": "^7.27.1",
    "@dfinity/agent": "^3.4.2",
    "@dfinity/candid": "^3.4.2",
    "@dfinity/identity-secp256k1": "^3.4.2",
    "@dfinity/ledger-icp": "^8.0.1",
    "@dfinity/principal": "^3.4.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fortawesome/fontawesome-svg-core": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@fortawesome/react-fontawesome": "^3.1.0",
    "@mui/material": "^7.3.5",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "axios": "^1.13.2",
    "bip32": "^5.0.0",
    "bip39": "^3.1.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "decision-tree": "^1.0.0",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.2",
    "extract-zip": "^2.0.1",
    "framer-motion": "^12.23.24",
    "localforage": "^1.10.0",
    "lodash": "^4.17.21",
    "luxon": "^3.7.2",
    "motion": "^12.23.24",
    "multer": "^2.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "react-select": "^5.10.2",
    "stream-browserify": "^3.0.0",
    "tiny-secp256k1": "^2.2.4",
    "vite-plugin-wasm": "^3.5.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/express": "^5.0.5",
    "@types/lodash": "^4.17.20",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react": "^5.1.1",
    "electron": "^39.2.2",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "react-hot-toast": "^2.6.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.peridotvault.desktop",
    "productName": "PeridotVault",
    "asar": true,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release",
      "buildResources": "public"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "type": "distribution",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.utilities",
      "notarize": false
    },
    "dmg": {
      "icon": "build/icons/icon.icns",
      "iconSize": 80,
      "window": {
        "width": 544,
        "height": 408
      },
      "contents": [
        {
          "x": 145,
          "y": 257,
          "type": "file"
        },
        {
          "x": 400,
          "y": 255,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "build/icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}